<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="25.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.ent.etrs.megamovies_falgat.controller.BarreMenuController">
   <children>
      <MenuBar fx:id="mbMenu" layoutY="2.0" prefHeight="25.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Movies">
            <items>
              <MenuItem fx:id="miListerFilm" mnemonicParsing="false" onAction="#listerFilm" text="Lister les films" />
                  <MenuItem fx:id="miAjouterFilm" mnemonicParsing="false" onAction="#ajouterFilm" text="Ajouter un film" />
                  <MenuItem fx:id="miQuitter" mnemonicParsing="false" onAction="#quitter" text="Quitter" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
              <MenuItem fx:id="miAide" mnemonicParsing="false" onAction="#aide" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
